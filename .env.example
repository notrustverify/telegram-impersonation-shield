# Telegram Bot Token (get from BotFather)
TELEGRAM_BOT_TOKEN=your_token_here

# Similarity threshold (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.8

# Auto-mute settings
AUTO_MUTE_ENABLED=false
AUTO_MUTE_THRESHOLD=0.9
MUTE_DURATION_HOURS=24

# How often to check the same user (in minutes)
CHECK_COOLDOWN_MINUTES=30

# Delete messages from users with similar usernames
DELETE_MESSAGES=true

# Group scanning settings
# The bot will scan admins and users who send messages
# Add the bot as an admin to enable username checks and auto-muting 